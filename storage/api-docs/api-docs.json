                "summary": "Austritt erstellen",
                "operationId": "5d1ebcedb203c86824c63c345d32ed86",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "sid",
                                    "vertragsende"
                                ],
                                "properties": {
                                    "sid": {
                                        "type": "string",
