{
    "openapi": "3.0.0",
    "info": {
        "title": "REST API",
        "description": "Diese REST-API stellt Funktionen zur Systemverwaltung bereit.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://ditto.local",
            "description": ""
        }
    ],
    "paths": {
        "/api/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login mit Benutzername und Passwort",
                "operationId": "222b2625838e3c57e017987f73598fda",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "admin"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "secret"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Erfolgreich eingeloggt",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "type": "string"
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Ungültige Anmeldedaten"
                    },
                    "403": {
                        "description": "Keine Berechtigung"
                    }
                }
            }
        },
        "/api/me": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Gibt den aktuell eingeloggten Benutzer zurück",
                "operationId": "8367feff40ba10e43187792cad3132c1",
                "responses": {
                    "200": {
                        "description": "Benutzerdaten",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer"
                                        },
                                        "username": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "roles": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Nicht authentifiziert"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Liste aller Benutzer",
                "operationId": "d984437c865fbc5f63f68a37064e9d7d",
                "responses": {
                    "200": {
                        "description": "Liste von Benutzern"
                    },
                    "401": {
                        "description": "Nicht authentifiziert"
                    },
                    "403": {
                        "description": "Keine Berechtigung"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Lokalen Benutzer erstellen",
                "operationId": "257369bf6dc5a05ccd6dd26c290cbaea",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "firstname",
                                    "lastname",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "maxmuster"
                                    },
                                    "firstname": {
                                        "type": "string",
                                        "example": "Max"
                                    },
                                    "lastname": {
                                        "type": "string",
                                        "example": "Mustermann"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "max@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "geheim123"
                                    },
                                    "role": {
                                        "type": "string",
                                        "example": "user"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Benutzer erstellt",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/{id}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Einen Benutzer abrufen",
                "operationId": "6d59d0fdd73e451768018c3539d2afaa",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Benutzer gefunden",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Benutzer nicht gefunden"
                    }
                }
            },
            "put": {
                "tags": [
                    "Users"
                ],
                "summary": "Lokalen Benutzer bearbeiten",
                "operationId": "7a4a0d19d85c089915f49afb8eb25701",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "firstname",
                                    "lastname",
                                    "email"
                                ],
                                "properties": {
                                    "firstname": {
                                        "type": "string"
                                    },
                                    "lastname": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "role": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Benutzer aktualisiert",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Nur lokale Benutzer dürfen bearbeitet werden"
                    },
                    "404": {
                        "description": "Benutzer nicht gefunden"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Users"
                ],
                "summary": "Benutzer löschen",
                "operationId": "1d07b16bf27727ca1c86418b53b87fd1",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Benutzer gelöscht"
                    },
                    "404": {
                        "description": "Benutzer nicht gefunden"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "title": "User",
                "description": "Benutzer Objekt",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "username": {
                        "type": "string",
                        "example": "admin"
                    },
                    "auth_type": {
                        "type": "string",
                        "example": "local"
                    },
                    "firstname": {
                        "type": "string",
                        "example": "Max"
                    },
                    "lastname": {
                        "type": "string",
                        "example": "Mustermann"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "max@example.com"
                    },
                    "is_enabled": {
                        "type": "boolean",
                        "example": true
                    },
                    "settings": {
                        "type": "object",
                        "example": {
                            "darkmode_enabled": true,
                            "sidebar_collapsed": false
                        },
                        "additionalProperties": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-09-21T12:34:56Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-09-21T12:34:56Z"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        },
        {
            "name": "Users",
            "description": "Users"
        }
    ]
}